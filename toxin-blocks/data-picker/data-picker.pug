include ../text-field/text-field.pug

mixin data-picker(title1, title2, test)

  - let value1 = 'ДД.ММ.ГГГГ'
  - let value2 = 'ДД.ММ.ГГГГ'


  if test
    - value1 = 'ДД.ММ.ГГГГ'
    - value2 = '19.08.2019'

  .data-picker    
    +dropdown(title1, '', value1, 'small')
    +dropdown(title2, '', value2, 'small')