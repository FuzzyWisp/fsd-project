mixin dropdown(title, subTitle, value, elementClass)
    - let x = 'text-field ' + elementClass;
    div(class=x)
        .text-field__titles
            h3.text-field__title #{title}
            h3.text-field__sub-title #{subTitle}
        .field-border.dropdown__field-border
            p.dropdown__text #{value}
            button.arrow-down.dropdown__button 
                i.material-icons &#xE313;